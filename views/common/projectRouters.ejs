<div class="menu">
    <div class="menu-item"><a href="/inbox">Inbox</a></div>
    <div class="menu-item"><a href="/users">Users</a></div>
    <% if(userObject?.name){ %>
      <div class="menu-item"><a href="/" onclick="logOutHandler()">Logout</a></div>
    <% }else{ %>
      <div class="menu-item"><a href="/" >Login</a></div>
      
    <% } %>
    </div>
  <script>
    async function logOutHandler() {
      
      await fetch('/',{
        method : 'DELETE'
      });
      Toastify({
        "text" : "Log Out successfull",
        duration : 1000
      }).showToast();
      setTimeout(()=>{
        window.location.reload('/');
      },3000)
      
    }
  </script>